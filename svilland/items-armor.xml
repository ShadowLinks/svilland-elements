<elements>
    <info>
        <name>Armor</name>
        <description></description>
        <author url="https://dreamrealmstorytellers.com/svilland/">Dream Realm Storytellers</author>
        <update version="0.0.1">
            <file name="items-armor.xml" url="https://raw.githubusercontent.com/ShadowLinks/svilland-elements/main/svilland/items-armor.xml" />
